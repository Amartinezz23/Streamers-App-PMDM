<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base con ActionBar -->
    <style name="Theme.StreamersApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>


        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema sin ActionBar para personalizar la Toolbar -->
    <style name="Theme.StreamersApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Tema para el menú de opciones -->
    <style name="Theme.StreamersApp.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Tema para el popup del menú -->
    <style name="Theme.StreamersApp.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

</resources>