        tools:layout="@layout/fragment_streamers">

        <action
            android:id="@+id/action_streamersFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.streamersapp.DetailFragment"
        android:label="Detalles del Streamer"
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="streamerId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/favoritosFragment"
        android:name="com.example.streamersapp.FavoritosFragment"
        android:label="Favoritos"
        tools:layout="@layout/fragment_favoritos" />

    <fragment
        android:id="@+id/ajustesFragment"
        android:name="com.example.streamersapp.AjustesFragment"
        android:label="Ajustes"
        tools:layout="@layout/fragment_ajustes" />

